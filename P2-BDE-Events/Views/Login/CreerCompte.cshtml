@model P2_BDE_Events.Models.Compte.Compte
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<section class="page-section portfolio mt-5">

    <div class="container">
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Création de compte</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
@using (Html.BeginForm())
{
    <div>
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email)
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div>
        @Html.LabelFor(m => m.MotDePasse)
        @Html.PasswordFor(m => m.MotDePasse)
        @Html.ValidationMessageFor(m => m.MotDePasse)
    </div>
                    <button class="btn btn-primary btn-xl" type="submit">Créer</button>
}
            </div>
        </div>
    </div>
</section>
