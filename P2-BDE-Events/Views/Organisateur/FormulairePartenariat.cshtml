@model P2_BDE_Events.ViewModels.FormulairePartenariatViewModel


@{
    Layout = "~/Views/Shared/_LayoutOrganisateur.cshtml";
}

<link rel="stylesheet" href="~/css/Organisateur/SolliciterEvenement.css">




@section Header {
    <p>Envoyer un message à votre confrère de BDE</p>
}


<div class="login-box">
    <form method="post" id="myForm">
        <div class="box">
            <label for="message">Message :</label><br>
            <textarea id="message" name="message" rows="4" cols="50" required></textarea>
        </div>
        <center>
            <a href="#" id="boutonForm">
                ENVOYER
                <span></span>
            </a>
        </center>
    </form>
</div>

<script>
    document.getElementById("boutonForm").addEventListener("click", function (e) {
        e.preventDefault();

        document.getElementById("myForm").submit();
    });
</script>








