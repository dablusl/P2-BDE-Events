@{
    Layout = "~/Views/Shared/_LayoutOrganisateur.cshtml";
}
@using P2_BDE_Events.Models.Prestations.Enums
@model P2_BDE_Events.ViewModels.EvenementViewModel
<!--model P2_BDE_Events.ViewModels.Etape1ViewModel-->

<link rel="stylesheet" href="~/css/Organisateur/CreerEvenementSurMesure.css">
@section Header {
    <div class="bar">
        <div class="progression3"></div>
    </div>
}


<div class="login-box">
    <form asp-action="CreerEvenementSurMesure3" method="post" id="myForm">
        <input type="hidden" id="Evenement.Organisateur.Id" name="Evenement.Organisateur.Id"
            value="@Model.Evenement.Organisateur.Id" />

        <div class="user-box">
            <input type="number" class="form-control" id="Evenement.NbParticipants" name="Evenement.NbParticipants"
                value="" placeholder="Nombre maximum de participant">
        </div>

        @foreach (var prestation in Model.Types)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="@prestation.Key" name="Types[@prestation.Key]" />
                <label class="form-check-label" for="@prestation.Key">@prestation.Key</label>
            </div>
        }
        <center>
            <a href="#" id="boutonForm">
                SUIVANT
                <span></span>
            </a>
        </center>
        </center>
    </form>
</div>

<script>
    document.getElementById("boutonForm").addEventListener("click", function (e) {
        e.preventDefault();

        document.getElementById("myForm").submit();
    });
</script>





