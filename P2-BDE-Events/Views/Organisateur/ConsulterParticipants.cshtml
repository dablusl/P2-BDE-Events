@model P2_BDE_Events.ViewModels.ConsulterEvenementViewModel
@{
    Layout = "~/Views/Shared/_LayoutOrganisateur.cshtml";
}

<link rel="stylesheet" href="~/css/Organisateur/ConsulterParticipant.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@section Header {
    <ul>
        <li onclick="window.location.href = '@Url.Action("ConsulterEvenement", "MesEvenements", new { area = "OrganisateurControllers", evenementId = Model.Evenement.Id })'">Voir l'évènement</li>
        <li>Supprimer participant</li>
        <li>Ajouter participant</li>
    </ul>
    <form>
        <div class="recherche">
            <input type="text" placeholder="Rechercher un participant">
        </div>
    </form>
}



@if (Model.Participants != null)
{
    <div class="container-tout">

        <div class="entete">Participants <strong>@Model.Evenement.NbParticipants</strong> sur <strong>@Model.Evenement.MaxParticipants</strong></div>
        <ol class="ulParticipant">
            @foreach (var participant in Model.Participants)
            {
                <li class="participant">
                    @participant.Compte.Prenom @participant.Compte.Nom
                </li>
            }
        </ol>


    </div>
}

else
{
    <p>Aucun participant n'a encore rejoint votre évènement</p>
}

<style>
    .ulParticipant {
        list-style-type: decimal;
        color: white;
    }

    .container-tout{
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        justify-content: normal;
        align-items: normal;
        align-content: normal;
    }
    .entete{
        font-size : 20px;
    }

    .ulParticipant {
        width: 600px;
        border-radius: 20px;
        cursor: pointer;
        padding: 25px 20px; 
        list-style-type: decimal;
    }

        .ulParticipant li {
            color: white;
            font-size: 20px;
            padding : 0px 20px;
        }

        .ulParticipant ol {
            color: white; 
       }


</style>