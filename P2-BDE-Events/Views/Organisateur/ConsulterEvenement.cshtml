@model P2_BDE_Events.ViewModels.ConsulterEvenementViewModel
@{
    Layout = "~/Views/Shared/_LayoutOrganisateur.cshtml";
}

<link rel="stylesheet" href="~/css/Organisateur/ConsulterEvenement.css">

@section Header {
    <ul>
        <li onclick="window.location.href = '@Url.Action("ConsulterParticipants", "MesEvenements", new { area = "OrganisateurControllers", evenementId = Model.Evenement.Id})'">Voir les participants</li>
        <li onclick="window.location.href = '@Url.Action("PrestationsDelEvenement", "PropositionsPrestations", new { area = "OrganisateurControllers", id = Model.Evenement.Id})'">Voir les prestations</li>
        <li>Supprimer l'évènement</li>
    </ul>
}

<div class="boxAffiche">

    <div class="affiche">
        <img src="@Model.Evenement.CoverPhotoPath" alt="">
        <div class="bordure"></div>
    </div>

</div>

<div class="boxDetails">

    <div class="login-box">

        <form>
            <div class="user-box">
                <input type="text" name="" required="">
                <label>@Model.Evenement.Titre</label>
            </div>
            <div class="user-box">
                @{
                    string dateISO = Model.Evenement.DateEvenement.ToString("yyyy-MM-dd");
                }
                <input type="date" name="" required="" value="@dateISO">
                <label></label>
            </div>
            <div class="user-box">
                <input type="number" name="" required="">
                <label>@Model.Evenement.PrixBillet €</label>
            </div>


            <center>
                <a href="#">
                    MODIFIER
                    <span></span>
                </a>
            </center>
        </form>
    </div>

</div>