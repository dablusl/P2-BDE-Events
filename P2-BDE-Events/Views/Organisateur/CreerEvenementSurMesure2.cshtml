@{
    Layout = "~/Views/Shared/_LayoutOrganisateur.cshtml";
}
@using P2_BDE_Events.ViewModels
@model EvenementViewModel

@section Header {

}

<h1>Quand et Où ?</h1>
<h1>@Model.Evenement.Id</h1>
<h1>@Model.Evenement.Titre</h1>
<h1>@Model.Evenement.Type</h1>


@using (Html.BeginForm())
{   

    <!--gestion zone grographique??-->
    //picker à être remplacés par BootstrapDatePicker
    @Html.LabelFor(model => model.Evenement.DateEvenement)
    @Html.TextBoxFor(model => model.Evenement.DateEvenement.Date, new { @class = "datepicker" })
    @Html.TextBoxFor(model => model.Evenement.DateEvenement.TimeOfDay, new { @class = "timepicker" })

    <button type="submit">next</button>
}

<script>
    $(document).ready(function () {
        // Initialize the datepicker
        $(".datepicker").datepicker();

        // Initialize the timepicker
        $(".timepicker").timepicker();
    });
</script>
