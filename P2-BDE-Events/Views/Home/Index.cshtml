<script>

    window.addEventListener('resize', adjustFontSize);

    function adjustFontSize() {
        const phraseBanner = document.querySelector('.phrase-banner');
        const bannerQuote = document.querySelector('.banner-quote');

        const widthRatio = phraseBanner.offsetWidth / bannerQuote.offsetWidth;
        const heightRatio = phraseBanner.offsetHeight / bannerQuote.offsetHeight;

        const ratio = Math.min(widthRatio, heightRatio);
        const maxFontSize = 80; // Define the maximum font size you want

        const fontSize = ratio * maxFontSize;
        bannerQuote.style.fontSize = fontSize + 'px';
    }

    adjustFontSize();
</script>