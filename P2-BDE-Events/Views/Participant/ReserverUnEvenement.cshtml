@model P2_BDE_Events.ViewModels.ReserverUnEvenementViewModel

@{
    Layout = "~/Views/Shared/_LayoutParticipant.cshtml";
}


<link rel="stylesheet" href="/css/Organisateur/SolliciterEvenement.css">

@section Header {
    <p>Réserver votre évènement</p>
}

<div class="login-box">
    <form method="post" id="myForm" action="@Url.Action("ReserverUnEvenement", "MesEvenements", new { area = "Participant", evenementId = @Model.Evenement.Id })" class="voirPlus">
        <div class="box">
            <h4>Nom</h4>
            <p>@Model.Evenement.Titre</p>
        </div>
        <div class="box">
            <h4>Date de l'évènement</h4>
            @{
                string dateISO = @Model.Evenement.DateEvenement.ToString("dd-MM-yyyy HH:mm");
            }
            <p>@dateISO</p>
        </div>
        <div class="box">
            <h4>Description</h4>
            <p>@Model.Evenement.Description</p>
        </div>
        <div class="box">
            <h4>Prix du billet</h4>
            <p>@Model.Evenement.PrixBillet €</p>
        </div>
        <div class="box">
            <h4>Nombre actuelle de participant</h4>
            <p>@Model.Evenement.NbParticipants / @Model.Evenement.MaxParticipants</p>
        </div>
                
        @if (!Model.DejaReserve)
        {
            <div class="box">
                <h4>Date Limite Inscription</h4>
                @{
                    string dateLIMISO = @Model.Evenement.DateLimiteInscription.ToString("dd-MM-yyyy HH:mm");
                }
                <p>@dateLIMISO</p>
            </div>
            <center>
                <a href="#" id="boutonForm">
                    RESERVER
                    <span></span>
                </a>
            </center>
        }
       
        
    </form>
</div>


<script>
    document.getElementById("boutonForm").addEventListener("click", function (e) {
        e.preventDefault();

        document.getElementById("myForm").submit();
    });
</script>
