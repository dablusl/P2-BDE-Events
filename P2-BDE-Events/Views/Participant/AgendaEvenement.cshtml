@model P2_BDE_Events.ViewModels.AgendaEvenementViewModel
@*@Model P2_BDE_Events.Models.Evenement
*@

@{
    Layout = "~/Views/Shared/_LayoutParticipant.cshtml";
}

<link rel="stylesheet" href="~/css/Participant/AgendaEvenement.css">

@section Header {
    <ul>
@*        <li>Intérêt</li>
        <li class="pageActive">Date</li>
        <li>Participant</li>
        <li>Prix</li>*@
        <li class="search-form">
            <form method="get" action="@Url.Action("AgendaEvenement", "Agenda", new { area = "Participant" })">
                <input type="hidden" name="universite" value="@Model.Participant.Universite" />
                <button type="submit">Les événements de mon université</button>
            </form>
        </li>
        <li>
            <form method="get">
                <input type="text" name="eventId" placeholder="Rechercher par identifiant" />
                <button type="submit">Rechercher</button>
            </form>
        </li>
    </ul>
}


@foreach (var evenement in Model.Evenements)
{
    <a href="@Url.Action("ReserverUnEvenement", "MesEvenements", new { area = "Participant", EvenementID = evenement.Id })" class="voirPlus">
        <div class="evenement">
            <div class="photo">
                <img src="@evenement.CoverPhotoPath" alt="">
            </div>
            <div class="info">
                <div class="prix">
                    <p>@evenement.PrixBillet €</p>
                </div>
                <div class="date">
                    <p>@evenement.DateEvenement.ToShortDateString()</p>
                </div>
                <div class="participant">
                    <p>@evenement.NbParticipants/@evenement.MaxParticipants</p>
                </div>
            </div>
        </div>
    </a>
}

