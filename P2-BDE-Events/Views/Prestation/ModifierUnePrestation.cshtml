@model P2_BDE_Events.Models.Prestations.Prestation

<h2>Modifier une prestation</h2>

<form asp-action="Modifier">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Titre">Titre</label>
        <input type="text" class="form-control" asp-for="Titre">
    </div>
    <div class="form-group">
        <label for="CapaciteMax">Capacité maximale</label>
        <input type="number" class="form-control" asp-for="CapaciteMax">
    </div>
    <!-- Ajoutez les autres champs ici -->

    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
</form>
