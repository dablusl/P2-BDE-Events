@model P2_BDE_Events.Models.Prestations.Prestation

<h2>Modifier une prestation</h2>

<form asp-action="Modifier">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Titre">Titre</label>
        <input type="text" class="form-control" asp-for="Titre">
    </div>
    <div class="form-group">
        <label for="CapaciteMax">Capacit√© maximale</label>
        <input type="number" class="form-control" asp-for="CapaciteMax">
    </div>
    <div class="form-group">
        <label for="Tarif">Tarif</label>
        <input type="number" class="form-control" asp-for="Tarif">
    </div>
    <div class="form-group">
        <label for="Calendrier">Calendrier</label>
        <input type="text" class="form-control" asp-for="Calendrier">
    </div>
    <div class="form-group">
        <label for="Livraison">Livraison</label>
        <input type="checkbox" class="form-control" asp-for="Livraison">
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>

    <div class="form-group">
        <label for="Type">Type</label>
        <select class="form-control" asp-for="Type">
            <option value="@P2_BDE_Events.Models.Prestations.Enums.TypeDePrestation.SALLE">Salle</option>
            <option value="@P2_BDE_Events.Models.Prestations.Enums.TypeDePrestation.DJ">DJ</option>
            <option value="@P2_BDE_Events.Models.Prestations.Enums.TypeDePrestation.TRAITEUR">Traiteur</option>

        </select>
    </div>

    <style>
        form {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f5f5f5;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"],
        input[type="number"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

    </style>

    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
</form>
