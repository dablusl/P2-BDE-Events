@model P2_BDE_Events.Models.Prestations.Prestation

<h2>Supprimer une prestation</h2>

<form asp-action="SuppressionConfirmee">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Titre">Titre</label>
        <input type="text" class="form-control" asp-for="Titre" readonly>
    </div>
    <div class="form-group">
        <label for="CapaciteMax">Capacité maximale</label>
        <input type="number" class="form-control" asp-for="CapaciteMax" readonly>
    </div>
    <!-- Ajoutez les autres champs ici -->

    <p>Êtes-vous sûr de vouloir supprimer cette prestation ?</p>
    <button type="submit" class="btn btn-danger">Supprimer</button>
</form>
