@model P2_BDE_Events.ViewModels.ListePrestationsViewModel
@{
    Layout = "~/Views/Shared/_LayoutPrestataire.cshtml";
}

@section Header {
    <ul>
        <li onclick="window.location.href = '@Url.Action("CreerUnePrestation", "CreerUnePrestation", new { area = "Prestataire"})'">Créer Une Prestation</li>
    </ul>

}


<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    .container {
        width: 80%;
        margin: auto;
        overflow: hidden;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-auto-rows: minmax(300px, auto);
        gap: 20px;
    }

    .prestation {
        background: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        cursor: pointer;
    }

        .prestation h3 {
            margin: 0;
            padding: 0;
            font-size: 1.5rem;
            text-align: center;
        }

        .prestation p {
            margin: 10px 0;
        }


        .prestation .btn {
            background: #444;
            color: #fff;
            text-align: center;
            padding: 6px 10px;
            text-decoration: none;
            border: none;
            border-radius: 3px;
            margin-top: auto;
            cursor: pointer;
            -webkit-transition: all 0.5s;
            -moz-transition: all 0.5s;
            -o-transition: all 0.5s;
            transition: all 0.5s;
        }

        .prestation .btn:hover {
        background-color: #ffffff;
        border: 2px solid #1f69ec;
        box-shadow: 5px 5px 5px #719fee;
        color: #1f69ec;
        text-align: center;
        font-size: 18px;
    }
        }


    

    .title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 24px;
    }

    .separator {
        width: 100%;
        height: 2px;
        background-color: black;
        margin: 20px 0;
    }

    body::-webkit-scrollbar {
        width: 10px;
    }

    body::-webkit-scrollbar-track {
        background-color: #e5e5e5;
    }

    body::-webkit-scrollbar-thumb {
        border-radius: 15px;
        background-color: #5c2a9d;
    }

        body::-webkit-scrollbar-thumb:hover {
            background-color: #b5076b;
        }
</style>

<section>
    <h1 class="title">Mes prestations</h1>
    <div class="container">
        @foreach (var prestation in Model.Prestations)
        {
            <div class="prestation">
                <h3>@prestation.Titre</h3>
                <p>@prestation.Description</p>
                <p>Tarif : $@prestation.Tarif</p>
                <button type="submit" class="btn btn-primary">Modifier</button>
                <button type="submit" class="btn btn-supp">Supprimer</button>
                <a href="#" class="btn">En savoir plus</a>
            </div>
        }
    </div>
    <div class="separator"></div>
</section>